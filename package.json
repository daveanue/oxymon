{
  "name": "voice-assistant",
  "version": "0.1.0",
  "description": "Desktop AI voice assistant with humanized personality",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "main": "packages/main/dist/index.js",
  "scripts": {
    "dev": "node packages/dev-mode.js",
    "build": "npm run build -ws --if-present",
    "compile": "npm run build && electron-builder build --config electron-builder.yml",
    "compile:win": "npm run build && electron-builder build --win --config electron-builder.yml",
    "compile:mac": "npm run build && electron-builder build --mac --config electron-builder.yml",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "typecheck": "npm run typecheck -ws --if-present",
    "lint": "eslint packages --ext .ts,.tsx",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.55.0",
    "playwright": "^1.40.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
