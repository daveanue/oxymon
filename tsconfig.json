{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@app/main": [
                "packages/main/src"
            ],
            "@app/main/*": [
                "packages/main/src/*"
            ],
            "@app/preload": [
                "packages/preload/src"
            ],
            "@app/preload/*": [
                "packages/preload/src/*"
            ],
            "@app/renderer": [
                "packages/renderer/src"
            ],
            "@app/renderer/*": [
                "packages/renderer/src/*"
            ],
            "@app/core": [
                "packages/core/src"
            ],
            "@app/core/*": [
                "packages/core/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}